@using IKEA.BLL.Dtos.DepartmentDtos
@model DepartmantDetailsDto

<div class="card border border-primary">
    <div class="card-header bg-primary">
        <h1 class="text-white">Department Details</h1>
    </div>
    <div class="card-body">

        <ul class="nav nav-tabs" id="departmentTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
            </li>
        </ul>

        <div class="tab-content" id="myTabContent">
            <!-- General Tab Content -->
            <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

                <div class="row">
                    <div class="form-group col-6">
                        <label class="col-form-label" asp-for="Code"></label>
                        <input asp-for="Code" class="form-control" readonly />
                    </div>
                    <div class="form-group col-6">
                        <label class="col-form-label" asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>
                    <div class="form-group col-12">
                        <label class="col-form-label" asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" readonly />
                    </div>
                </div>
            </div>

            <!-- Administration Tab Content -->
            <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
                <div class="form-group  col-12">
                    <label class="col-form-label" asp-for="CreatedBy"></label>
                    <input asp-for="CreatedBy" class="form-control" readonly />
                </div>
                <div class="form-group  col-12">
                    <label class="col-form-label">CreatedOn</label>
                    <input asp-for="CreatedOn" class="form-control" readonly />
                </div>
                <div class="form-group  col-12">
                    <label class="col-form-label" asp-for="LastModifedBy"></label>
                    <input asp-for="LastModifedBy" class="form-control" readonly />
                </div>
                <div class="form-group  col-12">
                    <label class="col-form-label" asp-for="LastModifedOn"></label>
                    <input asp-for="LastModifedOn" class="form-control" readonly />
                </div>
            </div>
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
                <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
            </div>
        </div>

    </div>
</div>

