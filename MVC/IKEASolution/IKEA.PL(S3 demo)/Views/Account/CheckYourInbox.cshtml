
@{
    ViewData["Title"] = "CheckYourInbox";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #e8f5e9; /* light green */
            margin: 0;
            padding: 0;
        }

        .main-agileinfo {
            width: 100%;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .agileits-top {
            background: #ffffff;
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            width: 350px;
            text-align: center;
        }

            .agileits-top p {
                font-size: 16px;
                margin: 15px 0;
                color: #2e7d32;
            }

            .agileits-top a {
                display: inline-block;
                padding: 10px 20px;
                background: #4caf50;
                color: white;
                text-decoration: none;
                border-radius: 8px;
                transition: 0.3s ease;
            }

                .agileits-top a:hover {
                    background: #388e3c;
                }
    </style>
</head>

<div class="main-agileinfo">
    <div class="agileits-top">
        <p>Please check your inbox</p>
        <p><a href="https://mail.google.com/mail/u/0/#inbox" target="_blank">Go To Your Inbox</a></p>
    </div>
</div>
