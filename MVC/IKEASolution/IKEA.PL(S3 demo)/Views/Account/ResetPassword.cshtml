@model IKEA.PL_S3_demo_.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #e8f5e9; /* light green */
            margin: 0;
            padding: 0;
        }

        .main-agileinfo {
            width: 100%;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .agileits-top {
            background: #ffffff;
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            width: 350px;
            text-align: center;
        }

            .agileits-top input[type="text"],
            .agileits-top input[type="password"],
            .agileits-top input[asp-for] {
                width: 100%;
                padding: 12px;
                border: 2px solid #81c784; /* green border */
                border-radius: 8px;
                margin-bottom: 15px;
                font-size: 15px;
                outline: none;
            }

            .agileits-top input[type="submit"] {
                width: 100%;
                padding: 12px;
                background: #4caf50;
                border: none;
                border-radius: 8px;
                color: white;
                font-size: 16px;
                cursor: pointer;
                transition: 0.3s ease;
            }

                .agileits-top input[type="submit"]:hover {
                    background: #388e3c;
                }

        span[asp-validation-for] {
            color: #d32f2f;
            font-size: 14px;
        }

        a {
            text-decoration: none;
            color: #2e7d32;
            font-weight: bold;
        }

            a:hover {
                color: #1b5e20;
            }
    </style>
</head>

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="ResetPassword" method="post">
            <div asp-validation-summary="All"></div>
            
            

            <input asp-for="NewPassword" placeholder="Password" required="" />
            <span asp-validation-for="NewPassword"></span>

            <input asp-for="ConfirmPassword" placeholder="Confirm Password" required="" />
            <span asp-validation-for="ConfirmPassword"></span>

            <input type="submit" value="Change Password">
        </form>

        <p><a asp-action="Login">Cancel</a></p>
    </div>
</div>

 
